{
  "name": "HuskyApply - AI Job Application Assistant",
  "short_name": "HuskyApply",
  "description": "Transform job hunting with AI-powered cover letters and application materials. Generate personalized, professional cover letters in seconds with advanced AI models.",
  "version": "2.1.0",
  "lang": "en-US",
  "dir": "ltr",
  
  "start_url": "/?utm_source=pwa&utm_medium=homescreen",
  "scope": "/",
  "id": "huskyapply-pwa-v2",
  
  "display": "standalone",
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone", "browser"],
  "orientation": "portrait-primary",
  
  "theme_color": "#2563eb",
  "background_color": "#ffffff",
  
  "icons": [

<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Properties -->
    <springProfile name="!production">
        <property name="LOG_LEVEL" value="INFO"/>
        <property name="LOG_PATH" value="logs"/>
    </springProfile>
    
    <springProfile name="production">
        <property name="LOG_LEVEL" value="WARN"/>
        <property name="LOG_PATH" value="/var/log/huskyapply"/>
    </springProfile>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <message/>
                <mdc/>
                <arguments/>
                <stackTrace/>
                <pattern>
                    <pattern>
                        {
                            "service": "huskyapply-gateway",
                            "version": "@project.version@",
                            "environment": "${spring.profiles.active:-development}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>
    
    <!-- File Appender for Application Logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <message/>
                <mdc/>
                <arguments/>
                <stackTrace/>
                <pattern>
                    <pattern>
                        {
                            "service": "huskyapply-gateway",
                            "version": "@project.version@",
                            "environment": "${spring.profiles.active:-development}",
                            "hostname": "${HOSTNAME:-unknown}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Audit Log Appender -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/audit.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <message/>
                <mdc/>
                <pattern>
                    <pattern>
                        {
                            "service": "huskyapply-gateway",
                            "logType": "AUDIT",
                            "environment": "${spring.profiles.active:-development}",
                            "hostname": "${HOSTNAME:-unknown}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/audit.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Security Log Appender -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/security.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <message/>
                <mdc/>
                <pattern>
                    <pattern>
                        {
                            "service": "huskyapply-gateway",
                            "logType": "SECURITY",
                            "environment": "${spring.profiles.active:-development}",
                            "hostname": "${HOSTNAME:-unknown}",
                            "priority": "HIGH"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/security.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Compliance Log Appender -->
    <appender name="COMPLIANCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/compliance.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <message/>
                <mdc/>
                <pattern>
                    <pattern>
                        {
                            "service": "huskyapply-gateway",
                            "logType": "COMPLIANCE",
                            "environment": "${spring.profiles.active:-development}",
                            "hostname": "${HOSTNAME:-unknown}",
                            "retention": "7_YEARS"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/compliance.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>2555</maxHistory>
            <totalSizeCap>50GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Performance Log Appender -->
    <appender name="PERFORMANCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/performance.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <message/>
                <mdc/>
                <pattern>
                    <pattern>
                        {
                            "service": "huskyapply-gateway",
                            "logType": "PERFORMANCE",
                            "environment": "${spring.profiles.active:-development}",
                            "hostname": "${HOSTNAME:-unknown}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/performance.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- ELK Stack Integration (Logstash Appender) -->
    <springProfile name="production,staging">
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>${LOGSTASH_HOST:-logstash.huskyapply.com}:${LOGSTASH_PORT:-5000}</destination>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                    <stackTrace/>
                    <pattern>
                        <pattern>
                            {
                                "service": "huskyapply-gateway",
                                "version": "@project.version@",
                                "environment": "${spring.profiles.active:-development}",
                                "hostname": "${HOSTNAME:-unknown}",
                                "pod": "${POD_NAME:-unknown}",
                                "namespace": "${NAMESPACE:-default}"
                            }
                        </pattern>
                    </pattern>
                </providers>
            </encoder>
            <connectionTimeout>5000</connectionTimeout>
            <reconnectionDelay>1000</reconnectionDelay>
            <writeBufferSize>16384</writeBufferSize>
        </appender>
        
        <!-- Fallback file appender for Logstash -->
        <appender name="LOGSTASH_FALLBACK" class="ch.qos.logback.core.FileAppender">
            <file>${LOG_PATH}/logstash-fallback.log</file>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                </providers>
            </encoder>
        </appender>
        
        <!-- Failover appender for Logstash -->
        <appender name="LOGSTASH_WITH_FAILOVER" class="ch.qos.logback.classic.net.SocketAppender">
            <remoteHost>${LOGSTASH_HOST:-logstash.huskyapply.com}</remoteHost>
            <port>${LOGSTASH_PORT:-4560}</port>
            <reconnectionDelay>1000</reconnectionDelay>
            <appender-ref ref="LOGSTASH_FALLBACK"/>
        </appender>
    </springProfile>
    
    <!-- Async Appenders for Performance -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>20</discardingThreshold>
        <maxFlushTime>5000</maxFlushTime>
        <neverBlock>true</neverBlock>
    </appender>
    
    <appender name="ASYNC_AUDIT" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="AUDIT_FILE"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <maxFlushTime>5000</maxFlushTime>
        <neverBlock>false</neverBlock>
    </appender>
    
    <appender name="ASYNC_SECURITY" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SECURITY_FILE"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <maxFlushTime>5000</maxFlushTime>
        <neverBlock>false</neverBlock>
    </appender>
    
    <!-- Logger Configurations -->
    
    <!-- Root Logger -->
    <root level="${LOG_LEVEL:-INFO}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <springProfile name="production,staging">
            <appender-ref ref="LOGSTASH"/>
        </springProfile>
    </root>
    
    <!-- Application Loggers -->
    <logger name="com.huskyapply" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <springProfile name="production,staging">
            <appender-ref ref="LOGSTASH"/>
        </springProfile>
    </logger>
    
    <!-- Audit Logger -->
    <logger name="AUDIT" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_AUDIT"/>
        <springProfile name="production,staging">
            <appender-ref ref="LOGSTASH"/>
        </springProfile>
    </logger>
    
    <!-- Security Logger -->
    <logger name="SECURITY" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_SECURITY"/>
        <springProfile name="production,staging">
            <appender-ref ref="LOGSTASH"/>
        </springProfile>
    </logger>
    
    <!-- Compliance Logger -->
    <logger name="COMPLIANCE" level="INFO" additivity="false">
        <appender-ref ref="COMPLIANCE_FILE"/>
        <springProfile name="production,staging">
            <appender-ref ref="LOGSTASH"/>
        </springProfile>
    </logger>
    
    <!-- Performance Logger -->
    <logger name="PERFORMANCE" level="INFO" additivity="false">
        <appender-ref ref="PERFORMANCE_FILE"/>
    </logger>
    
    <!-- Spring Framework Loggers -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.boot" level="INFO"/>
    
    <!-- Database Loggers -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type" level="TRACE"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="org.flywaydb" level="INFO"/>
    
    <!-- Message Queue Loggers -->
    <logger name="org.springframework.amqp" level="INFO"/>
    <logger name="org.springframework.rabbit" level="INFO"/>
    
    <!-- HTTP Client Loggers -->
    <logger name="org.apache.http" level="INFO"/>
    <logger name="org.springframework.web.client" level="INFO"/>
    
    <!-- Metrics and Monitoring -->
    <logger name="io.micrometer" level="INFO"/>
    <logger name="org.springframework.boot.actuate" level="INFO"/>
    
    <!-- Third-party Library Loggers -->
    <logger name="com.fasterxml.jackson" level="WARN"/>
    <logger name="org.apache.tomcat" level="INFO"/>
    <logger name="org.eclipse.jetty" level="INFO"/>
    
    <!-- Test Loggers -->
    <springProfile name="test">
        <logger name="org.springframework.test" level="INFO"/>
        <logger name="org.testcontainers" level="INFO"/>
        <logger name="com.github.dockerjava" level="WARN"/>
    </springProfile>
    
    <!-- Development Profile Specific -->
    <springProfile name="!production">
        <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="TRACE"/>
        <logger name="org.springframework.security.web.FilterChainProxy" level="DEBUG"/>
        <logger name="com.huskyapply.gateway.security" level="DEBUG"/>
        <logger name="com.huskyapply.gateway.audit" level="DEBUG"/>
    </springProfile>
    
    <!-- Production Profile Specific -->
    <springProfile name="production">
        <logger name="org.springframework.boot.autoconfigure" level="ERROR"/>
        <logger name="org.springframework.boot.context.embedded" level="ERROR"/>
        <logger name="org.apache.catalina" level="ERROR"/>
        <logger name="org.hibernate.validator" level="ERROR"/>
        
        <!-- Rate limiting for noisy loggers in production -->
        <logger name="org.springframework.web.servlet.DispatcherServlet" level="ERROR"/>
        <logger name="org.springframework.boot.actuate.endpoint.web" level="ERROR"/>
    </springProfile>
    
</configuration>